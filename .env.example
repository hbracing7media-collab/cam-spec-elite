# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Chat Configuration (OpenAI-compatible API)
# Required for the AI chatbot feature
OPENAI_API_KEY=your_openai_api_key

# Optional: Use a different OpenAI-compatible API (Groq, Together, etc.)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Specify a different model (defaults to gpt-4o-mini)
# OPENAI_MODEL=gpt-4o-mini

# Stripe Configuration (for credit card payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal Configuration
# Get these from https://developer.paypal.com/dashboard/applications
# NEXT_PUBLIC_PAYPAL_CLIENT_ID is used by the browser SDK
# PAYPAL_CLIENT_ID and PAYPAL_CLIENT_SECRET are used for server-side API calls
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# Set to "live" for production, leave unset or "sandbox" for testing
# PAYPAL_MODE=sandbox
